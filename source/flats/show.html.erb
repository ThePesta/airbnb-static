<% flat = data.flats[owner] %>
<div class="banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('../images/background-<%=flat.location%>.jpg')">
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="header-flat-owner text-center">
        <%= image_tag "../images/#{flat.name}.jpg", class: "img-circle", width: 80 %>
        <p><%=flat.name.capitalize%></p>
      </div>
      <div class="header-flat-name">
        <h1><%=flat.desc%></h1>
        <p><%=flat.location.capitalize%></p>
        <%(1..5).each do |num|%>
          <%if num <= flat.rating%>
            <i class="fa fa-star" style="color: #ffb400"></i>
          <%else%>
            <i class="fa fa-star" style="color: #cacccd"></i>
          <%end%>
        <%end%>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4" style="background-color: #F4F4F4">
        <form action="#">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout" id="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
    </div>
  </div>
</div>
